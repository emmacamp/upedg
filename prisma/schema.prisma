// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Facilitator {
  id                      String   @id @default(cuid())
  facilitator_name        String
  facilitator_role        String
  facilitator_skills      String
  facilitator_description String

  // Relation Scalar Fields
  facilitatorSocials FacilitatorSocials?
  Image              Image?
  Course             Course[]

  // Timestamps
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  // Modify the name of the table
  @@map("facilitators")
}

model Course {
  id                 String @id @default(cuid())
  course_title       String
  course_description String

  // Relation Scalar Fields
  facilitatorId String

  // Annotated Relations Fields
  Meeting     Meeting?
  Flayer      Flayer?
  
  // Relationships
  Facilitator Facilitator @relation(fields: [facilitatorId], references: [id])
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("courses")
}

model Meeting {
  id       String   @id @default(cuid())
  url      String
  datetime DateTime
  details  String

  // Relationships
  course   Course? @relation(fields: [courseId], references: [id])
  courseId String @unique
  
  @@map("meetings")
}

model FacilitatorSocials {
  id        String @id @default(cuid())
  instagram String 
  facebook  String 
  linkedin  String 
  mail      String 

  // Relationships
  Facilitator   Facilitator @relation(fields: [facilitatorId], references: [id])
  facilitatorId String      @unique

  @@map("facilitator_socials")
}

model Flayer {
  id         String @id @default(cuid())
  public_id  String 
  secure_url String 

  // Relationships
  Course   Course? @relation(fields: [courseId], references: [id])
  courseId String @unique

  @@map("flayers")
}

model Image {
  id         String @id @default(cuid())
  public_id  String 
  secure_url String 

  // Relationships
  facilitatorId String @unique
  Facilitator   Facilitator @relation(fields: [facilitatorId], references: [id])

  @@map("images")
}