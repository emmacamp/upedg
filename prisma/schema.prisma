// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Facilitator {
  id                      String                @id @default(cid())
  facilitator_name        String
  facilitator_role        String
  facilitator_skills      String
  facilitator_description String
  facilitator_image       Image              @relation(fields: [facilitatorImageId], references: [id], onDelete: Cascade)
  facilitatorImageId      Int
  facilitator_socials     FacilitatorSocials @relation(fields: [facilitatorSocialsId], references: [id], onDelete: Cascade)
  facilitatorSocialsId    Int
  Course                  Course[]
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
}
model Course {
  id                 Int         @id @default(autoincrement())
  course_title       String
  course_description String
  course_flayer      Flayer      @relation(fields: [courseFlayerId], references: [id], onDelete: Cascade)
  courseFlayerId     Int
  facilitator        Facilitator @relation(fields: [facilitatorId], references: [id])
  facilitatorId      Int
  meeting            Meeting     @relation(fields: [meetingId], references: [id])
  meetingId          Int
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
}

model FacilitatorSocials {
  id          Int           @id @default(autoincrement())
  instagram   String
  facebook    String
  linkedin    String
  mail        String
  Facilitator Facilitator[]
}

model Meeting {
  id        Int      @id @default(autoincrement())
  url       String
  datetime  DateTime
  details   String
  courses   Course[]
}

model Flayer {
  id          Int           @id @default(autoincrement())
  public_id   String
  secure_url  String
  Course      Course[]
}

model Image {
  id          Int           @id @default(autoincrement())
  public_id   String
  secure_url  String
  Facilitator Facilitator[]
}
